{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["-u", "bdd", "--timeout", "3000", "--colors", "--exit", "${workspaceFolder}/test"],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Launch via npm",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "env": { "AWS_PROFILE": "pi", "NODE_ENV": "development" },
      "runtimeArgs": ["run", "debug"],
      "port": 9229
    }
  ]
}
