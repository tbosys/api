{
  "$id": "http://example.com/example.json",
  "type": "object",
  "limit": 100,
  "maxLimit": 500,
  "key": "project",
  "title": "Función",
  "namespace": "organizacion",
  "restricted": [],
  "properties": {
    "id": {
      "$id": "/properties/id",
      "type": "integer",
      "title": "Id"
    },

    "name": {
      "$id": "/properties/name",
      "type": "string",
      "title": "Titulo",
      "filterable": true,
      "sortabe": true,
      "width": 380
    },

    "descripcion": {
      "$id": "/properties/descripcion",
      "type": "string",
      "title": "Descripcion del Puesto",
      "editable": true,
      "element": "textarea",
      "width": 1700
    },

    "departamento": {
      "$id": "/properties/descripcion",
      "type": "string",
      "title": "Departamento",
      "editable": true,
      "filterable": true,
      "sortable": true,
      "width": 100,
      "element": "select",
      "filterRenderer": "SelectFilter",
      "enum": [
        "ventas",
        "credito",
        "mercadeo",
        "operaciones",
        "logistica y bodega",
        "importacion",
        "contabilidad",
        "tesoreria"
      ]
    },

    "prioridad": {
      "$id": "/properties/descripcion",
      "type": "string",
      "title": "Prioridad",
      "editable": true,
      "filterable": true,
      "sortable": true,
      "width": 100,
      "element": "select",
      "filterRenderer": "SelectFilter",

      "enum": ["alta", "baja", "media"]
    },

    "ownerId": {
      "$id": "/properties/ownerId",
      "type": "integer",
      "title": "Propietario",
      "table": "owner",
      "filterable": true,
      "sortable": true,
      "route": "owner/findLikeName",
      "metadataType": "owner",
      "element": "autocomplete",
      "elementOptions": {
        "primary": "name"
      },
      "width": 200
    },
    "tareas": {
      "title": "Acuerdos",
      "element": "task",
      "excludeFromQuery": true,
      "type": "string"
    }
  },
  "belongsTo": ["owner"],
  "required": [],
  "layout": [
    {
      "title": "Información",
      "columns": 8,
      "fieldSize": 12,
      "fields": ["name", "descripcion"]
    },
    {
      "title": "Información",
      "columns": 4,
      "fieldSize": 12,
      "fields": ["prioridad"]
    },
    {
      "title": "Acuerdos",
      "columns": 12,
      "fieldSize": 12,
      "fields": ["tareas"]
    }
  ],
  "actions": ["Crear", "Editar", "Borrar"],
  "table": {
    "sum": [],
    "fields": ["id", "name", "ownerId", "departamento", "prioridad", "descripcion"]
  },
  "batch": []
}
